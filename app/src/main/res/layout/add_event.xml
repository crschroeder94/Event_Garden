<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errors"
            android:textColor="@color/red"
            android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Event Name"/>
        <EditText
            android:id = "@+id/name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textAutoCorrect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Date:"/>
        <Button
            android:id="@+id/date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pick Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Time"/>
        <Button
            android:id="@+id/time"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Set Time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Description"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:inputType="textMultiLine"
            android:layout_height="100dp"
            android:gravity="top"
            android:padding="5dip"
            android:background="@drawable/shape"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Location"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"

            android:id="@+id/address"
            android:textSize="18sp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:inputType="textMultiLine"/>
    </LinearLayout>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Categories"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox android:id="@+id/checkbox_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recreation"
                android:onClick="onCreateCheckboxClicked"/>
            <com.mikepenz.iconics.view.IconicsTextView
                android:text="{faw-futbol-o}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/dark_blue"
                />
            <CheckBox android:id="@+id/checkbox_enviro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Environmental"
                android:onClick="onCreateCheckboxClicked"/>
            <com.mikepenz.iconics.view.IconicsTextView
                android:text="{faw_recycle}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/dark_blue"
                />
            <CheckBox android:id="@+id/checkbox_arts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arts"
                android:onClick="onCreateCheckboxClicked"/>
            <com.mikepenz.iconics.view.IconicsTextView
                android:text="{faw-paint_brush}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/dark_blue"
                />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <CheckBox android:id="@+id/checkbox_animals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animals"
            android:onClick="onCreateCheckboxClicked"/>
        <com.mikepenz.iconics.view.IconicsTextView
            android:text="{faw-paw}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/dark_blue"
            />
        <CheckBox android:id="@+id/checkbox_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"
            android:onClick="onCreateCheckboxClicked"/>
        <com.mikepenz.iconics.view.IconicsTextView
            android:text="{faw-glass}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/dark_blue"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Equipment"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:hint="Item"
                    android:id="@+id/equip_1"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:id="@+id/equip_1_quant"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:hint="Item"
                    android:id="@+id/equip_2"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:id="@+id/equip_2_quant"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:hint="Item"
                    android:id="@+id/equip_3"/>
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:id="@+id/equip_3_quant"/>
            </LinearLayout>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Create"
        android:id="@+id/create"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>